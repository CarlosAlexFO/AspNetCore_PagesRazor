@page
@model RazorPagesFilme.Pages.DeleteModel

@{
    ViewData["Title"] = "Exclusão";
}

<h3>@ViewData["Title"]</h3>

<h3>Deseja realmente excluir o filme?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.DataLancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.DataLancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Preco)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Avaliacao)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Filme.ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a asp-page="./Index" button class="btn btn-primary" type="button">Voltar</a>
    </form>
</div>
