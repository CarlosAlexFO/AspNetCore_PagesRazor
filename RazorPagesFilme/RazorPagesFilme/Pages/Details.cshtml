@page
@model RazorPagesFilme.Pages.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h3>@ViewData["Title"]</h3>

<div>
    <h4>Filme</h4>
    <hr />
    <dl class="border" >
        <dt class="col-sm-2" >
            @Html.DisplayNameFor(model => model.Filme.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.DataLancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.DataLancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Filme.ID" button class="btn btn-warning" type="button">Alterar</a> 
    <a asp-page="./Index" button class="btn btn-primary" type="button">Voltar</a>
</div>
